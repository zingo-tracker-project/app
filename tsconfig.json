{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "store/*": ["app/store/*"],
      "components/*": ["app/components/*"],
      "hooks/*": ["app/hooks/*"],
      "utils/*": ["app/utils/*"],
      "assets/*": ["app/assets/*"],
      "recoil/*": ["app/recoil/*"]
    },
    "jsx": "react-native"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
